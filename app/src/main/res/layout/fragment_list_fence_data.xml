<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/layout_horizontal_margin_small"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_horizontal_margin"
            android:layout_marginRight="@dimen/layout_horizontal_margin"
            android:layout_marginTop="@dimen/layout_horizontal_margin_small">

            <TextView
                android:id="@+id/fence_pre_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/selector_date_pre"
                android:padding="@dimen/layout_horizontal_margin_small"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/list_fence_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="2-18"
                android:textColor="@color/default_text_night"
                android:textSize="@dimen/text_size_medium2" />

            <TextView
                android:id="@+id/fence_next_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/selector_date_next"
                android:padding="@dimen/layout_horizontal_margin_small"
                android:textColor="@color/black" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/layout_horizontal_margin"
            android:layout_marginRight="@dimen/layout_horizontal_margin"
            android:layout_marginTop="@dimen/layout_horizontal_margin_small"
            android:background="@color/light_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/layout_horizontal_margin_small">

            <TextView
                android:id="@+id/fence_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_size_medium3" />
        </RelativeLayout>

        <ListView
            android:id="@+id/fence_listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/layout_vertical_margin_small"
            android:layout_marginLeft="@dimen/layout_vertical_margin_small"
            android:layout_marginRight="@dimen/layout_vertical_margin_small"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:padding="@dimen/layout_vertical_margin_smallest"
            android:scrollbars="none" />
    </LinearLayout>

</LinearLayout>