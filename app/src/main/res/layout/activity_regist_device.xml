<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/back_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_settings_layout2"
            android:drawableLeft="@mipmap/icon_title_back"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin_small"
            android:paddingRight="@dimen/activity_horizontal_margin" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="设备绑定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium3" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_vertical_margin_large"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" >

        <EditText
            android:id="@+id/regist_device_nickname_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_marginTop="@dimen/layout_vertical_margin_small"
            android:background="@null"
            android:drawablePadding="10dip"
            android:hint="佩戴者昵称"
            android:maxLength="6"
            android:padding="5dp"
            android:textColor="@color/default_text"
            android:textSize="@dimen/text_size_medium2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray" />

        <EditText
            android:id="@+id/regist_device_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_marginTop="@dimen/layout_vertical_margin_small"
            android:background="@null"
            android:drawablePadding="10dip"
            android:hint="设备SIM卡号"
            android:inputType="phone"
            android:maxLength="13"
            android:padding="5dp"
            android:textColor="@color/default_text"
            android:textSize="@dimen/text_size_medium2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray" />

        <EditText
            android:id="@+id/regist_device_imei_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_marginTop="@dimen/layout_vertical_margin_small"
            android:background="@null"
            android:drawablePadding="10dip"
            android:hint="imei号"
            android:inputType="number"
            android:maxLength="20"
            android:padding="5dp"
            android:textColor="@color/default_text"
            android:textSize="@dimen/text_size_medium2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray" />

        <Button
            android:id="@+id/regist_device_save_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/layout_vertical_margin_large"
            android:background="@drawable/selector_button"
            android:text="确 认"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_vertical_margin" >

            <TextView
                android:id="@+id/mark_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注：如果您已自行为设备插入了SIM卡，请填入SIM卡号，否则可不填"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_vertical_margin_small" >

            <TextView
                android:id="@+id/notice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/rect_bg"
                android:gravity="left|center_vertical"
                android:padding="@dimen/activity_horizontal_margin_small"
                android:text="如何安装SIM卡？"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>