<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false"><shape>
            <gradient android:angle="90" android:endColor="@color/light_red" android:startColor="@color/light_red" />
            <corners android:radius="5dp" />
        </shape></item>
        
      <!-- pressed -->
    <item android:state_enabled="true" android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/red" android:startColor="@color/red" />
            <corners android:radius="5dp" />
        </shape></item>
        
    <item android:state_enabled="false"><shape>
            <gradient android:angle="90" android:endColor="#E5E5E5" android:startColor="#E5E5E5" />
            <corners android:radius="5dp" />
        </shape>
    </item>        
        
</selector>